@model SalesOrder.Models.OrderHeader
@using SalesOrder.Models
@{
    ViewBag.Title = "ADD NEW ORDER INFORMATION";
}


<div class="container-fluid py-5">
    <div class="row">
        
        <div class="col-12">
            <div class="card shadow border-0">
                <div class="card-header">
                    <h4>@ViewBag.Title</h4>
                </div>
                <div class="card-body mx-a w-75">
                    @if (ViewBag.Message != null)
                    {

                        <div class="alert  alert-dismissible fade show" role="alert">
                            <span>@ViewBag.Message</span>
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    @using (Html.BeginForm("Add", "Home", FormMethod.Post))
                    {

                        @Html.ValidationSummary(true)
                        <div class="form-group my-2">
                            <label for="">Order Number*</label>
                            @Html.TextBox("OrderNumber", "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.OrderNumber)

                        </div>
                        <div class="form-group my-2">
                            <label for="">Order Type*</label>
                            @Html.DropDownList("OrderType", new SelectList(Enum.GetValues(typeof(Types))), "--Select Order type--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.OrderType)
                        </div>
                        <div class="form-group my-2">
                            <label for="">Order Status*</label>
                            @Html.DropDownList("OrderStatus", new SelectList(Enum.GetValues(typeof(Status))), "--Select Order Status--", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.OrderStatus)
                        </div>

                        <div class="form-group my-2">
                            <label for="">Customer Name*</label>
                            @Html.TextBox("CustomerName", "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CustomerName)
                        </div>
                        <div class="form-group my-2">
                            <label for="">Customer Name*</label>
                            <input type="date" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
                            
                            @Html.ValidationMessageFor(model => model.CustomerName)
                        </div>

                        <div class="my-2 py-4">
                            <input type="submit" value="Add" class="btn btn-success" style="width:150px" />
                            <input type="reset" value="Reset" class="btn btn btn-link" />

                        </div>

                    }
                    <div style="color:Blue;font-family:Arial">
                        @Html.ActionLink("<- Back", "Index")
                    </div>
                </div>


            </div>

        </div>
    </div>

   
</div>


