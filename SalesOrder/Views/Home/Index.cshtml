@using SalesOrder.Models
@model IEnumerable<SalesOrder.Models.OrderHeader>

@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid py-5">
    <div class="row mb-4">
        <div class="col-12">
            
            <div class="card shadow border-0">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5>Order Header</h5>
                    <a href="/Home/add" class="btn btn-primary">Add New </a>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-6 col-md-6">
                            <div class="form-group">
                                <label for="">Order Number</label>
                                <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
                                <small id="helpId" class="form-text text-muted">Only Alphabet And Numbers Allowed!!</small>
                            </div>
                        </div>
                        <div class="col-6 col-md-6">
                            <div class="row">
                                <div class="col-12 col-md-5">
                                    <div class="form-group">
                                        <label for="">From</label>
                                        <input type="date" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
                                        <small id="helpId" class="form-text text-muted"></small>
                                    </div>
                                </div>
                                <div class="col-12 col-md-5">
                                    <div class="form-group">
                                        <label for="">From</label>
                                        <input type="date" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
                                        <small id="helpId" class="form-text text-muted"></small>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>


                <div class="card-body">

                    <table class="table table-striped table-inverse table-responsive">
                        <thead class="thead-inverse">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Order Number</th>
                                <th scope="col">Order Type</th>
                                <th scope="col">Order Status</th>
                                <th scope="col">Customer Name</th>
                                <th scope="col">Create Date</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <th scope="row">1</th>
                                    <th>
                                        @Html.DisplayFor(modelItem => order.OrderNumber)
                                    </th>
                                    <td>@Html.DisplayFor(modelItem => order.OrderType)</td>
                                    <td>@Html.DisplayFor(modelItem => order.OrderStatus)</td>
                                    <td>@Html.DisplayFor(modelItem => order.CustomerName)</td>
                                    <td>@Html.DisplayFor(modelItem => order.OrderDate)</td>
                                    <td class="tbLink"><button class="btn btn-primary btn-xs more" id="@order.Id">view</button></td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>


            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12" id="btnAddorderline" style="visibility: hidden">
            <div class="card shadow-none border-0" >
                <div class="card-header d-flex justify-content-between align-items-center" >
                    <h5>Selected Order Number: <span></span></h5>
                    <a class="btn btn-primary btnAddLine">Add New Order line </a>
                </div>
                <div class="card-body">

                    <div class="row">
                        <div class="col-6 col-md-6">
                            <div class="form-group">
                                <label for="">Product Code</label>
                                <input type="text" class="form-control" name="" id="" aria-describedby="helpId" placeholder="">
                                <small id="helpId" class="form-text text-muted">Only Alphabet And Numbers Allowed!!</small>
                            </div>
                        </div>
                    </div>

                </div>


                <div class="card-body">

                    <table class="table table-striped table-inverse table-responsive">
                        <thead class="thead-inverse">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Line Number</th>
                                <th scope="col">Product Code</th>
                                <th scope="col">Product Type</th>
                                <th scope="col">Cost Price</th>
                                <th scope="col">Sales Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody id="tblorderLine">
                        </tbody>
                    </table>


                </div>


            </div>


        </div>
    </div>
    <!-- Modal -->
    @*<div class="modal fade" id="modelAdd" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">*@
