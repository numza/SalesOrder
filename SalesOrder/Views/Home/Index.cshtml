<script src="~/Scripts/jquery-3.6.0.min.js"></script>

<script>

    //edit order line
    $(document).on("click", ".btnEditLine", function (e) {


        //get id value for a selected button
        var id = $(this).attr("id");

        $.ajax(
            {
                type: 'GET',
                dataType: 'JSON',
                url: '/OrderLine/getOrderLineById/' + id,
                data: { id: JSON.stringify(id) },
                success:
                    function (response) {
                        //Add data to a model
                        displayOrderLine(response);
                    },
                error:
                    function (response) {
                        alert("Error: " + response);
                    }
            });
        function displayOrderLine(orderLine) {
            // Fill all fields that will be edited
            $("input[name~='orderId']").val(orderLine.OrderID.toString());
            $("input[name~='lineNumber']").val(orderLine.LineNumber.toString());
            $("input[name~='pCode']").val(orderLine.ProductCode.toString());
            $("#pType").val(orderLine.ProductType.toString());
            $("input[name~='cPrice']").val(orderLine.CostPrice.toString());
            $("input[name~='sPrice']").val(orderLine.SalePrice.toString());
            $("input[name~='quantity']").val(orderLine.Quantity.toString());

        }
    })
    //Get orderline for selected orderHeader
    $(document).on("click", ".more", function (e) {

        //
        $("#btnAddorderline").removeAttr("style");
        $("#btnAddorderline").css('display', 'block');
        // get id value for a selected button
        var id = $(this).attr("id");
        // Add customized href for btnAddLine link
        $('.btnAddLine').attr('href', "/OrderLine/add/" + id);
        $.ajax(
            {
                type: 'GET',
                dataType: 'JSON',
                url: '/Home/getOrderLineByOrderNumber/' + id,
                //data: { id: JSON.stringify(id) },
                success:
                    function (response) {
                        // Generate HTML table.

                        $('#tblorderLine').html('');
                        if (response.length <= 0) {

                            $('#tblorderLine').html('<tr><td colspan="6" style="text-align:center"><h2>Nothing found.</h2></tb></tr>');

                        }
                        else {

                            var tr;
                            //Append each row to html table
                            var count = 1;
                            for (var i = 0; i < response.length; i++) {
                                tr = $('<tr/>');
                                tr.append("<td>" + (i + 1) + "</td>");
                                tr.append("<td>" + response[i].LineNumber + "</td>");
                                tr.append("<td>" + response[i].ProductCode + "</td>");
                                tr.append("<td>" + response[i].ProductType + "</td>");
                                tr.append("<td>" + response[i].CostPrice + "</td>");
                                tr.append("<td>" + response[i].SalePrice + "</td>");
                                tr.append("<td>" + response[i].Quantity + "</td>");
                                tr.append("<td>" +
                                    '<a class="btn btn-success btn-xs btnEditLine" id="' + response[i].LineNumber + '"data-toggle="modal" data-target="#modelAdd">Edit</a>' +
                                    '<a class="btn btn-link btn-xs" data-toggle="modal" data-target="#modelRemove">Remove</a>'
                                    + "</td>");

                                $('#tblorderLine').append(tr);
                            }
                        }

                    },
                error:
                    function (response) {
                        alert("Error: " + response);
                    }
            });
    })
    // Submit model data
    $(document).on("click", "#btnSaveEdit", function (e) {
        var frm = $('#editForm');
        var userData = new Object();
        userData = createObject();
        $.ajax({
            type: 'POST',
            url: '/OrderLine/Edit',
            data: userData,
            dataType: "json",
            success: function (data) {
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Your work has been saved',
                    showConfirmButton: false,
                    timer: 1500
                })
                createOrderLineTable(data)
                $(".closeModel").click();
                clearFields();
            },
            error: function (data) {
                console.log('An error occurred.');
            },
        });

        function createObject() {
            let UserDate = {
                OrderID: $("input[name~='orderId']").val(),
                LineNumber: $("input[name~='lineNumber']").val(),
                ProductCode: $("input[name~='pCode']").val(),
                ProductType: $("#pType").val(),
                CostPrice: $("input[name~='cPrice']").val(),
                SalePrice: $("input[name~='sPrice']").val(),
                Quantity: $("input[name~='quantity']").val()
            };

            return UserDate;
        }
        function clearFields() {

            $("input[name~='orderId']").val(""),
                $("input[name~='lineNumber']").val(""),
                $("input[name~='pCode']").val(""),
                $("#pType").val(""),
                $("input[name~='cPrice']").val(""),
                $("input[name~='sPrice']").val(""),
                $("input[name~='quantity']").val("")
        }
        function createOrderLineTable(response) {

            $('#tblorderLine').html('');
            if (response.length <= 0) {

                $('#tblorderLine').html('<tr><td colspan="7" style="text-align:center"><h2>Nothing found.</h2></tb></tr>');

            }
            else {

                var tr;
                //Append each row to html table
                var count = 1;
                for (var i = 0; i < response.length; i++) {
                    tr = $('<tr/>');
                    tr.append("<td>" + (i + 1) + "</td>");
                    tr.append("<td>" + response[i].LineNumber + "</td>");
                    tr.append("<td>" + response[i].ProductCode + "</td>");
                    tr.append("<td>" + response[i].ProductType + "</td>");
                    tr.append("<td>" + response[i].CostPrice + "</td>");
                    tr.append("<td>" + response[i].SalePrice + "</td>");
                    tr.append("<td>" + response[i].Quantity + "</td>");
                    tr.append("<td>" +
                        '<a class="btn btn-success btn-xs btnEditLine" id="' + response[i].LineNumber + '"data-toggle="modal" data-target="#modelAdd">Edit</a>' +
                        '<a class="btn btn-link btn-xs" data-toggle="modal" data-target="#modelRemove">Remove</a>'
                        + "</td>");

                    $('#tblorderLine').append(tr);
                }
            }
        }
    })

</script>