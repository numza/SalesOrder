                                <div class="col">
                                    <label for="">Product Type*</label>
                                    <select class="form-control" onchange="" required name="pType" id="pType">
                                        <option>Apparel</option>
                                        <option>Parts</option>
                                        <option>Equipment</option>
                                        <option>Motor</option>
                                    </select>
                                </div>
                                <div class="col">
                                    <label for="">Cost Price*</label>
                                    <input type="number"
                                           min="0"
                                           value=""
                                           class="form-control" required name="cPrice" id="" aria-describedby="helpId" placeholder="">
                                    @*<small id="helpId" class="form-text text-muted">Help text</small>*@
                                </div>
                                <div class="col">
                                    <label for="">Sales Price*</label>
                                    <input type="number"
                                           min="0"
                                           value=""
                                           class="form-control" required name="sPrice" id="" aria-describedby="helpId" placeholder="">
                                    @*<small id="helpId" class="form-text text-muted">Help text</small>*@
                                </div>
                                <div class="col">
                                    <label for="">Quantity*</label>
                                    <input type="number" min="0"
                                           value=""
                                           class="form-control" required name="quantity" id="" aria-describedby="helpId" placeholder="">
                                    @*<small id="helpId" class="form-text text-muted">Help text</small>*@
                                </div>

                            </div>

                        </form>

                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-secondary closeModel" id="" data-dismiss="modal">Close</a>
                    <a id="btnSaveEdit" class="btn btn-primary">Save</a>
                </div>
            </div>
        </div>
    </div>
